{
  "automations": [
    {
      "id": "motion_light_on",
      "trigger": {
        "type": "binary_sensor",
        "condition": "on_press",
        "parameters": {
          "object_id": "motion_sensor"
        }
      },
      "actions": [
        "light.turn_on: living_room_light"
      ]
    },
    {
      "id": "motion_light_off",
      "trigger": {
        "type": "binary_sensor",
        "condition": "on_release",
        "parameters": {
          "object_id": "motion_sensor"
        }
      },
      "actions": [
        "light.turn_off: living_room_light"
      ]
    },
    {
      "id": "button_toggle",
      "trigger": {
        "type": "binary_sensor",
        "condition": "on_press",
        "parameters": {
          "object_id": "my_button"
        }
      },
      "actions": [
        "light.toggle: bedroom_light"
      ]
    },
    {
      "id": "button_fan_control",
      "trigger": {
        "type": "binary_sensor",
        "condition": "on_press",
        "parameters": {
          "object_id": "my_button"
        }
      },
      "actions": [
        "switch.toggle: fan"
      ]
    }
  ]
}
